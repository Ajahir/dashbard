<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
        <RelativeLayout
         android:layout_width="match_parent"
          android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
          android:layout_marginRight="15dp"
         android:id="@+id/dashlayout"
         android:layout_height="wrap_content">
<TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
        android:text="@string/dashboard"
       android:textStyle="bold" 
        android:textColor="@android:color/black"
        android:id="@+id/dashboard"
       android:textSize="40sp"
        />
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_marginTop="7dp"
         android:layout_alignRight="@+id/dashboard"
            android:layout_alignParentRight="true"
        
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/facebok" 
       />
   </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard"
        android:backgroundTint="@color/darkblue"
        android:layout_marginTop="20dp"
     
        app:cardCornerRadius="15dp"
      
        android:id="@+id/dashboardcard1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:textSize="15sp"
              
                android:textStyle="bold"
            android:id="@+id/january"
                android:layout_marginLeft="20dp"
            android:textColor="@android:color/white"
           android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
            android:text="@string/january"/>
        
                    <ImageView
                
       android:background="@drawable/doller"
               android:layout_below="@+id/january"
            android:layout_width="wrap_content"
                android:id="@+id/doller" 
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="8dp"
            android:layout_height="wrap_content"/>
            <TextView
                android:layout_below="@+id/january"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rs"
                android:layout_toRightOf="@+id/doller"
                android:textSize="40sp"
                 android:layout_marginTop="6dp"
                android:id="@+id/rs"
                android:textStyle="bold"
                android:textColor="@android:color/white" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_below="@+id/january"
               android:layout_marginTop="8dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_statistics"
                />
           <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar1"
                android:layout_below="@+id/rs"
                android:progressTint="@android:color/white"
                android:progress="70"
                android:layout_marginLeft="20dp"
                
                android:progressBackgroundTint="@android:color/white"
               android:layout_marginRight="70dp"
                android:layout_marginTop="3dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal" 
                />
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/seventy"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rs"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dailyspendtarget"
                android:layout_below="@+id/progressBar1"
                android:text="@string/Daily_spend_target"
                android:paddingBottom="9dp"
                android:layout_marginTop="5dp"
                 android:textSize="15sp"
                android:textStyle="bold"

                 android:layout_marginLeft="20dp"
                android:textColor="@android:color/white"/>
          
            <TextView
                android:layout_width="wrap_content"
                android:text="@string/dialyspendprice"
                 android:textSize="15sp"
                 android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_below="@+id/progressBar1"
                android:layout_toRightOf="@+id/dailyspendtarget"
              android:layout_marginTop="5dp"
            
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
<TextView
    android:layout_width="wrap_content"
        android:layout_below="@+id/dashboardcard1"
        android:text="@string/daily_spend"
        
            android:id="@+id/dailyspend"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
    android:layout_height="wrap_content"/>
    <TextView
         android:layout_width="wrap_content"
        android:layout_below="@+id/dashboardcard1"
        android:text="@string/see_all"
            android:layout_marginRight="15dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_below="@+id/dailyspend"
            android:layout_height="wrap_content"
              app:cardCornerRadius="15dp"
            android:layout_marginTop="5dp"
            android:id="@+id/dailyspendcard"
           >

            <RelativeLayout
                            android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                 android:layout_marginTop="15dp"
                  android:layout_marginRight="15dp"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:id="@+id/bankcard"
                    android:backgroundTint="@color/colorLightRed"
                    app:cardCornerRadius="10dp"
           
    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_bank"
                        android:id="@+id/banklogo" 
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="9dp"
            />     
                </androidx.cardview.widget.CardView>
               
             <TextView
                android:text="@string/Net_Banking"
                     android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/bankcard"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/netbanking"
                    android:textColor="@android:color/black"
                    
                     android:layout_height="wrap_content"
                />
        <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
                    android:layout_below="@+id/netbanking"
                    android:text="@string/netbankprice"
                    android:layout_marginLeft="10dp"
                     android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@+id/bankcard"/>
               <TextView
                    android:layout_marginTop="14dp"
                    android:id="@+id/netbankprice"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/Lightblue"
                    android:layout_height="wrap_content"
                    android:text="@string/netbankdate"/>
                 <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:id="@+id/foodcard"
                       android:layout_marginTop="10dp"
                    android:layout_below="@+id/bankcard"
                    android:backgroundTint="@color/colorLightYellow"
                    app:cardCornerRadius="10dp"
           
    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_food"
                        android:id="@+id/banklogo" 
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="9dp"
            />     
                </androidx.cardview.widget.CardView>
                 
             <TextView
                android:text="@string/food"
                     android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/foodcard"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/bankcard"
                     android:layout_marginTop="10dp"
                    android:id="@+id/foodtext"
                    android:textColor="@android:color/black"
                    android:layout_height="wrap_content"
                />
           <TextView
                android:layout_width="wrap_content"
                     android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                    android:layout_below="@+id/foodtext"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:text="@string/foodprice"
                    android:layout_toRightOf="@+id/foodcard"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/Lightblue"
                    android:layout_below="@+id/bankcard"
                    android:layout_height="wrap_content"
                    android:text="@string/fooddate"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="38dp"
                    android:layout_height="40dp"
                    android:id="@+id/dresscard"
                       android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="@color/colorLightGreen"
                    app:cardCornerRadius="10dp">
           
  <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_dress"
              
                    android:id="@+id/clothes"
                    android:layout_marginTop="8dp"
                 android:layout_marginLeft="9dp"
                    
                    tools:ignore="ContentDescription" 
                  /></androidx.cardview.widget.CardView>
<TextView
                android:text="@string/clothes"
                     android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/dresscard"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/foodcard"
                     android:layout_marginTop="10dp"
                    android:id="@+id/clothestext"
                    android:textColor="@android:color/black"
                     android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                     android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                    android:layout_below="@+id/clothestext"
                    android:layout_marginTop="5dp"
                    android:textColor="@android:color/black"
                    android:text="@string/clothprice"
                     android:paddingBottom="19dp"
                    android:layout_toRightOf="@+id/dresscard"/>
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/Lightblue"
                    android:layout_below="@+id/foodcard"
                    android:layout_height="wrap_content"
                    android:text="@string/clothdate"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <TextView
    android:layout_width="wrap_content"
        android:layout_below="@+id/dailyspendcard"
        android:text="@string/wishlist"
   

            android:id="@+id/wishlist"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
    android:layout_height="wrap_content"/>
    <TextView
         android:layout_width="wrap_content"
        android:layout_below="@+id/dailyspendcard"
        android:text="@string/see_all"
            android:layout_marginRight="15dp"
            android:textColor="@color/darkblue"
            android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/> </RelativeLayout>
    
         <HorizontalScrollView
         android:layout_below="@+id/dashlayout"
            android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
            android:scrollbars="none"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="match_parent"
          >
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/tshirtcard"
                       android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="@color/darkblue"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_t_shirt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tee"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        /></LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/gymcard"
                    android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorLightGreen"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_dumbell"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gym"
                            android:textSize="@dimen/size12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        /></LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/bikecard"
                    android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="@color/colorLightYellow"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_motorcycle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bike"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        /></LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/moneycard"
                    android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="@color/colorLightRed"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_money"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tee"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        /></LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/dresscard"
                       android:layout_marginTop="10dp"
                    android:layout_below="@+id/foodcard"
                    android:backgroundTint="@color/darkblue"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_t_shirt"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tee"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        /></LinearLayout>
                </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/gymcard2"
                    android:layout_marginLeft="10dp"
                       android:layout_marginTop="10dp"
                    android:backgroundTint="@color/colorLightGreen"
                    app:cardCornerRadius="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        
                        android:src="@drawable/ic_dumbell"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/gym"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                       android:layout_gravity="center"
                        /></LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
    
   

</RelativeLayout>